/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    void deleteNode(ListNode* node) {
        //assigning next node value to current node.
        node->val = node->next->val;
        //assigning next next node address to current node next.
        node->next = node->next->next;
    }
};
